<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MainFragment">

<!--   /// <include-->
<!--        android:id="@+id/tb_tool_bar"-->
<!--        layout="@layout/tool_bar"-->
<!--        app:layout_constraintLeft_toLeftOf="parent"-->
<!--        app:layout_constraintRight_toRightOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent" />-->

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toTopOf="@id/et_money"
        app:layout_constraintLeft_toLeftOf="@id/tb_tool_bar"
        app:layout_constraintRight_toRightOf="@id/tb_tool_bar"
        app:layout_constraintTop_toBottomOf="@id/tb_tool_bar" />

    <TextView
        android:id="@+id/tv_info_h_v_h_h"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_logo"
        app:layout_constraintLeft_toLeftOf="@id/iv_logo"
        app:layout_constraintRight_toRightOf="@id/iv_logo"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="32dp"
        android:hint="@string/amount"
        android:inputType="number"
        android:maxLength="10"
        android:shadowColor="@color/colorPrimaryDark"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColorHint="@color/colorHint"
        android:textColorLink="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@id/et_comment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_logo" />

    <EditText
        android:id="@+id/et_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:hint="@string/comment"
        android:inputType="text"
        android:textColorHint="@color/colorHint"
        app:layout_constraintBottom_toTopOf="@id/btn_pay"
        app:layout_constraintLeft_toLeftOf="@id/et_money"
        app:layout_constraintRight_toRightOf="@id/et_money"
        app:layout_constraintTop_toBottomOf="@id/et_money" />

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/button_orange_shape"
        android:padding="10dp"
        android:text="@string/receive_the_payment"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/et_comment"
        app:layout_constraintRight_toRightOf="@id/et_comment"
        app:layout_constraintTop_toBottomOf="@id/et_comment" />

    <Button
        android:id="@+id/btn_qr_generate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/button_orange_shape"
        android:padding="10dp"
        android:text="@string/receive_the_payment"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/et_comment"
        app:layout_constraintRight_toRightOf="@id/et_comment"
        app:layout_constraintTop_toBottomOf="@id/et_comment" />

    <ProgressBar
        android:id="@+id/pb_pay_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/btn_pay"
        app:layout_constraintRight_toRightOf="@id/btn_pay"
        app:layout_constraintTop_toBottomOf="@id/btn_pay" />
</androidx.constraintlayout.widget.ConstraintLayout>